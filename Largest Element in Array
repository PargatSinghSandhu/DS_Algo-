#include<iostream>
#include<stdio.h>
using namespace std;


int largestelement(int arr[ ],int n)
{
    int largest=arr[0];
    
    for(int i=0;i<4;i++)
    {
        if(arr[i]>largest)
        {
          largest=arr[i];
        }
    }
    
    return largest;
    
    
}

int main()
{
    int arr[4]= {1,5,3,4};
    
    cout<<"Largest Element in the array "<<largestelement(arr, 4);
    
}
